generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  name            String?
  email           String           @unique
  password        String?
  createdAt       DateTime         @default(now())

  createdPapers   Paper[]          @relation("CreatedPapers")
  assignedPapers  AssignPaper[]    @relation("AssignedPapers")
}

model Paper {
  id              Int              @id @default(autoincrement())
  paper_name            String
  description     String?
  createdAt       DateTime         @default(now())
  userId          Int
  timeLimit       Int?
  questions     Json  @default("[]")              
  

  creator         User             @relation("CreatedPapers", fields: [userId], references: [id])
  assignments     AssignPaper[]    @relation("PaperAssignments")
}

model AssignPaper {
  id              Int              @id @default(autoincrement())
  userId          Int
  paperId         Int
  createdAt       DateTime         @default(now())

  user            User             @relation("AssignedPapers", fields: [userId], references: [id])
  paper           Paper            @relation("PaperAssignments", fields: [paperId], references: [id])
}
